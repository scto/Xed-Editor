{
  "comments": {
    "blockComment": [ "(*", "*)" ]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "(*", "close": " *)" },
    { "open": "\"", "close": "\"" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(Proof|Definition|Lemma|Theorem|Record|Inductive|CoInductive|Module|Section).*$",
    "decreaseIndentPattern": "^\\s*(Qed|End|Defined).*$"
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "folding": {
    "markers": {
      "start": "^\\s*(Proof|Definition|Lemma|Theorem|Record|Inductive|CoInductive|Module|Section)",
      "end": "^\\s*(Qed|End|Defined)"
    }
  }
}
