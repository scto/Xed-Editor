{
  "comments": {
    "lineComment": "#",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    {
      "open": "\"",
      "close": "\"",
      "notIn": ["comment", "string"]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": ["comment", "string"]
    }
  ],
  "surroundingPairs": [
    {
      "open": "\"",
      "close": "\""
    },
    {
      "open": "'",
      "close": "'"
    }
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*\\S.*\\{.*$",
    "decreaseIndentPattern": "^.*\\S.*\\}.*$"
  },
  "folding": {
    "markers": {
      "start": "^\\s*#region\\b",
      "end": "^\\s*#endregion\\b"
    }
  }
}
