{
  "comments": {
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["<", ">"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "<", "close": ">" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    { "open": "<", "close": ">" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "wordPattern": "[a-zA-Z0-9-_]+",
  "folding": {
    "markers": {
      "start": "^\\s*<!--\\s*#region\\b.*-->",
      "end": "^\\s*<!--\\s*#endregion\\b.*-->"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "<(?!/)([a-zA-Z][a-zA-Z0-9-]*)(?=\\s|>|/)",
    "decreaseIndentPattern": "^\\s*</([a-zA-Z][a-zA-Z0-9-]*)\\s*>"
  }
}
